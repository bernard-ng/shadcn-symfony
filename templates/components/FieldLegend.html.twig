{% props
    variant = 'legend',
%}

<legend
    data-slot="field-legend"
    data-variant="{{ variant }}"
    class="{{ cn(
        'mb-3 font-medium',
        'data-[variant=legend]:text-base',
        'data-[variant=label]:text-sm',
        attributes.render('class')
    ) }}"
    {{ attributes }}
>
    {% block content %}{% endblock %}
</legend>
