{% props
    type = 'button',
%}

<button
    type="{{ type }}"
    data-slot="collapsible-trigger"
    data-ui--collapsible-target="trigger"
    data-action="click->ui--collapsible#toggle"
    class="{{ cn(attributes.render('class')) }}"
    {{ attributes }}
>
    {% block content %}{% endblock %}
</button>
