{% props
    tag = 'button',
    type = 'button',
%}

<{{ tag }}
    data-slot="sheet-trigger"
    data-ui--sheet-target="trigger"
    data-action="click->ui--sheet#toggle"
    {% if tag == 'button' %}type="{{ type }}"{% endif %}
    {{ attributes }}
>
    {% block content %}{% endblock %}
</{{ tag }}>
