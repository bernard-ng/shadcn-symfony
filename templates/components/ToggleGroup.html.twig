{% props
    variant = 'default',
    size = 'default',
%}

{% set __toggleGroupVariantParent = __toggleGroupVariant ?? null %}
{% set __toggleGroupSizeParent = __toggleGroupSize ?? null %}
{% set __toggleGroupVariant = variant %}
{% set __toggleGroupSize = size %}

<div
    role="group"
    data-slot="toggle-group"
    data-variant="{{ variant }}"
    data-size="{{ size }}"
    class="{{ cn('group/toggle-group flex w-fit items-center rounded-md data-[variant=outline]:shadow-xs', attributes.render('class')) }}"
    {{ attributes }}
>
    {% block content %}{% endblock %}
</div>

{% set __toggleGroupVariant = __toggleGroupVariantParent %}
{% set __toggleGroupSize = __toggleGroupSizeParent %}
