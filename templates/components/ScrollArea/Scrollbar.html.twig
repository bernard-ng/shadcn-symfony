{% props orientation = 'vertical' %}

{% set forwardedAttributes = attribute(attributes, 'without', ['class']) ?? attributes %}

{% set orientationClasses = orientation == 'horizontal'
    ? 'h-2.5 flex-col border-t border-t-transparent'
    : 'h-full w-2.5 border-l border-l-transparent'
%}

<div
    data-slot="scroll-area-scrollbar"
    data-orientation="{{ orientation }}"
    aria-orientation="{{ orientation }}"
    class="{{ cn('flex touch-none p-px transition-colors select-none', orientationClasses, attributes.render('class')) }}"
    {{ forwardedAttributes }}
>
    {% block thumb %}
        <div
            data-slot="scroll-area-thumb"
            class="bg-border relative flex-1 rounded-full"
        ></div>
    {% endblock %}
</div>
